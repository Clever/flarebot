{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
